---
const { name, description, url, github_url, img_src } = Astro.props;
---

<div
  class="flex flex-col md:flex-row justify-between mb-5 grayscale hover:grayscale-0"
>
  <div class="flex flex-col justify-between">
    <div>
      <h3 class="font-bold">{name}</h3>
      <p>{description}</p>
    </div>
    <p>
      {
        url.length !== 0 &&
          url.map((url: string) => (
            <a href={url} target="_blank">
              <button class="py-0.25 px-1 mr-2.5 bg-purple-900 text-white hover:underline">
                website
              </button>
            </a>
          ))
      }
      {
        github_url.length !== 0 &&
          github_url.map((url: string) => (
            <a href={url} target="_blank">
              <button class="py-0.25 px-1 mr-2.5 bg-purple-900 text-white hover:underline">
                code
              </button>
            </a>
          ))
      }
    </p>
  </div>
  <div class="flex justify-center mt-2.5 md:mt-auto min-w-[13rem]">
    <img class="w-52 rounded-lg" src={`projects/${img_src}`} alt="website" />
  </div>
</div>
